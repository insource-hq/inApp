<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>
    <style name="FullScreen" parent="Theme.Design.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>


    <!--  Button Style -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_design</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!--  EditText Style -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/edittext_design</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

</resources>
